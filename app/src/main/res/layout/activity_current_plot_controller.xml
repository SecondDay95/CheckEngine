<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.example.checkengine2.controller.CurrentPlotControllerActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/tv_cursor_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ap_black"
        android:textColor="@color/ap_white"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"/>

    <com.androidplot.xy.XYPlot
        style="@style/APDefacto.Dark"
        android:id="@+id/currentPlot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        androidPlot.backgroundPaint.color="#000000"
        androidPlot.borderPaint.color="#000000"
        androidplot.renderMode="use_background_thread"
        app:title="Prad"
        app:domainTitle="Domain"
        app:rangeTitle="Range"/>

</LinearLayout>
